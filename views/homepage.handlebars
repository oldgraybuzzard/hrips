<section>
  <h2>Create New Employee</h2>

  <form class="new-employee-form">
    <div>
      <label for="first_name">Employee First Name</label>
      <input type="text" id="first_name" name="first_name" />
    </div>
    <div>
      <label for="last_name">Last Name</label>
      <input type="text" id="last_name" name="last_name" />
    </div>
    <div>
      <label for="email">Email</label>
      <input type="email" id="email" name="email" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if employees.length}}
<section>
  
  <ol>
    {{#each employees as |employee|}}
    <li>
      {{> employee-info employee}}
      <a href="/dashboard/edit/{{employee.id}}" class="edit-link">Edit employee</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

{{#if employees.length}}
<section>
  <h2>List of Company Employees</h2>
  <ol class="employee-list">
    {{#each employees}}
    <li>
      {{> employee-info }}
      
    </li>
  {{/each}}
  </ol>
</section>
{{/if}}


{{#unless loggedIn}}
<h1>You must login first!</h1>
{{/unless}}

<script src="/javascript/add-employee.js"></script>
